{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "rootDirs": [
      "./src"
    ],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "lib": ["es2020"],
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./src"
  ]
}
